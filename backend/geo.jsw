import { fetch } from 'wix-fetch';
const START = { lat: 51.263, lon: 6.546 }; // Ackerstr. 39, 47877 Willich
export async function routeKm(toLat, toLon){
  const url = `https://router.project-osrm.org/route/v1/driving/${START.lon},${START.lat};${toLon},${toLat}?overview=false&alternatives=false`;
  const r = await fetch(url); if(!r.ok) throw new Error('Routing fehlgeschlagen');
  const j = await r.json(); return (j?.routes?.[0]?.distance||0)/1000;
}
